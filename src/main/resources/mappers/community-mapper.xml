<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="community">
	<resultMap type="Community" id="resultCommunity">
	</resultMap>

	<!-- 검색한 게시글 조회 -->
	<select id="searchList" parameterType="Community"
		resultType="arraylist" resultMap="resultCommunity">
		SELECT NVL(MAX(ROWNUM),0)
		FROM COMMUNITY
		<choose>
			<when test="CSUBJECT != null">
				WHERE CSUBJECT LIKE '%'||#{csubject}||'%' 
			</when>							<!-- #은 set하는거고	 -->
			<when test="CCONTENT != null">
				WHERE CCONTENT LIKE '%${ccontent}%'  <!-- $는 미리만들어놓고 실행한다 이엘아님..마이바티스문임!-->
			</when>
			<when test="CWRITER !=null">
				WHERE CWRITER LIKE '%${cwriter}%'
			</when>
		</choose>
	</select>

	<!-- 조회수 상위 5개 게시글 조회 -->
	<select id="searchpopularList" parameterType="Community" resultType="arraylist" resultMap="resultCommunity">
	SELECT * FROM COMMUNITY WHERE ROWNUM &lt;=5 ORDER BY VIEWCNT DESC
	</select>
	
	<!-- 페이지당 게시글 조회 -->
	<select id="selectList" resultType="arraylist" resultMap="resultCommunity">
		SELECT * FROM COMMUNITY ORDER BY CNO DESC
	</select>

	<!-- 게시글 전체 개수 조회 -->
	<select id="countCommunity" resultType="int">
		SELECT count(*) FROM COMMUNITY
	</select>
	
	<!-- 게시글 단일 조회 -->
	<select id="selectOne" parameterType="string" resultType="Community">
		SELECT * FROM COMMUNITY WHERE CNO = #{cno}
	</select>

	<!-- 게시글 삽입 -->
	<insert id="insertCommunity" parameterType="String"
		flushCache="true" statementType="PREPARED">
		INSERT INTO COMMUNITY VALUES(
		LPAD(SEQ_COMMUNITY.NEXTVAL,2,'0'),
		#{csubject}, #{ccontent}, default,
		#{filepath}, 0, 0, 0, 0, #{cwriter})
	</insert>

	<!-- 게시글 수정 -->
	<update id="updateCommunity" parameterType="Community" flushCache="true"
		statementType="PREPARED">
		UPDATE COMMUNITY
		SET CSUBJECT = #{csubject},
		CCONTENT = #{ccontent},
		FILEPATH = #{filepath}
		WHERE CNO = #{cno}
	</update>

	<!-- 게시글 삭제 -->
	<delete id="deleteCommunity" parameterType="string"
		flushCache="true" statementType="PREPARED">
		DELETE FROM COMMUNITY WHERE CNO = #{cno}
	</delete>
	
	<!-- 게시글 조회 수 증가 -->
	<update id="addReadCount" parameterType="string"
		flushCache="true" statementType="PREPARED">
		UPDATE COMMUNITY SET VIEWCNT = VIEWCNT+1 WHERE CNO = #{cno}
	</update>
</mapper>
